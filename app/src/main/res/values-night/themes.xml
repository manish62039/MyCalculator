<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="OrangeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="common_btn" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:onClick">onButtonClick</item>
    </style>

    <style name="digit_btn" parent="common_btn">
        <item name="android:tag">digit_btn</item>
        <item name="backgroundTint">@color/purple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="operator_btn" parent="common_btn">
        <item name="android:tag">operator_btn</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="equal_to_btn" parent="common_btn">
        <item name="android:tag">equal_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="back_space_btn" parent="common_btn">
        <item name="android:tag">back_btn</item>
        <item name="backgroundTint">@color/red</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="line" parent="Theme.MaterialComponents">
        <item name="android:background">@color/line_default</item>
    </style>

    <style name="text_calculations" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_result" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/result_text_color_dark</item>
    </style>

    <style name="color_picker" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">32dp</item>
        <item name="android:onClick">onSelectColorClicked</item>
        <item name="android:layout_height">32dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/red</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="check_mark_style" parent="Theme.MaterialComponents">
        <item name="android:layout_width">15dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:tag">check_mark</item>
        <item name="android:src">@drawable/check</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>